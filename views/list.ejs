<h1 class="display-4">Welcome to ArticleBase</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < articles.length; i++ ){ %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= articles[i].title %></td>
            <td><%= articles[i].body %></td>
            <td>
                <a href="/articles/edit/<%= articles[i].id %>" class="btn btn-primary">Edit</a>
                <form class="d-inline" action="/articles/delete/<%= articles[i].id %>" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </td>
        </tr>
    <% } %>
  </tbody>
</table>
